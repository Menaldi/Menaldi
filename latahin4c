<?php

$nama = ["Indonesia :   ", "Singapura   :   ", "Malaisia    :   ", "Brunei  :   ", "Thailand    :   "];
$nama[] = "Laos     :   ";
$nama[] = "Filipina :   ";
$nama[] = "Myanmar  :   ";
$ik = [" D.K.I Jakarta", " Singapura", " Kuala Lumpur", " Bandar Seri begawan", " Bangkok", " Vietnam", " Manila", " Naypydaw"]
?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Lopping for Array</title>
</head>
<body>
    <p>
    Daftar Negara ASEAN dan Ibukota : </br>
    <?php
       for ($i = 0; $i < 1; $i++) {
        echo "<li>$nama[0] $ik[0]</li>";
        echo "<li>$nama[1] $ik[1]</li>";
        echo "<li>$nama[2] $ik[2]</li>";
        echo "<li>$nama[3] $ik[3]</li>";
        echo "<li>$nama[4] $ik[4]</li>";
        echo "<li>$nama[5] $ik[5]</li>";
        echo "<li>$nama[6] $ik[6]</li>";
        echo "<li>$nama[7] $ik[7]</li>";
       }
    ?>

    </p>
